<!-- search_dialog.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- EditText for searching by codeBill -->
    <EditText
        android:id="@+id/editTextCodeBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Code Bill" />

    <!-- EditText for searching by numberTable -->
    <EditText
        android:id="@+id/editTextNumberTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number Table" />

    <EditText
        android:id="@+id/editTextUserStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name Staff" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search" />


</LinearLayout>
