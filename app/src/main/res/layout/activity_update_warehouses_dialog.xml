<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="28dp"
        android:layout_marginBottom="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/black"
            android:orientation="vertical"
            android:padding="28dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Booking Table"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <EditText
                android:id="@+id/Book_Uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_person_pin_24"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/Book_Uphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_call_24"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="8dp"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/Book_Utime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_timer_24"
                android:hint="Time"
                android:inputType="time"
                android:padding="8dp"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/Book_Udate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_date_range_24"
                android:hint="Book date"
                android:inputType="date"
                android:padding="8dp"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <EditText
                android:id="@+id/Book_Udescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:drawable/editbox_background"
                android:drawableEnd="@drawable/baseline_description_24"
                android:hint="Description"
                android:inputType="textImeMultiLine"
                android:lines="5"
                android:padding="8dp"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/Book_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textSize="20dp"
                    android:layout_marginEnd="20dp"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/Book_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Cancel"
                    app:cornerRadius="30dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>