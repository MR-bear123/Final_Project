<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/able">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarbook"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/cardview_dark_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="471dp"
            android:orientation="vertical"
            android:padding="28dp">

            <EditText
                android:id="@+id/Book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_person_pin_24"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/Book_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_call_24"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="8dp"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/Book_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_timer_24"
                android:hint="Time"
                android:inputType="time"
                android:padding="8dp"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/Book_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_date_range_24"
                android:hint="Book date"
                android:inputType="date"
                android:padding="8dp"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/Book_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:drawable/editbox_background"
                android:drawableEnd="@drawable/baseline_description_24"
                android:hint="Description"
                android:inputType="textImeMultiLine"
                android:lines="5"
                android:padding="8dp"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/Book_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking"
                android:textSize="18sp"
                app:cornerRadius="30dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
