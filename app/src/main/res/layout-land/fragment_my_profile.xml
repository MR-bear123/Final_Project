<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile Admin"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginTop="10dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgavatar"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/defaulavatar"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="28dp">
            <TextView
                android:id="@+id/Prof_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_email_24"
                android:hint="Email"
                android:textSize="20dp"
                android:inputType="textEmailAddress"
                android:padding="8dp" />
            <TextView
                android:id="@+id/Prof_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_call_24"
                android:hint="Role"
                android:inputType="number"
                android:textSize="20dp"
                android:padding="8dp" />
            <EditText
                android:id="@+id/Prof_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_person_pin_24"
                android:hint="Name"
                android:textSize="20dp"
                android:inputType="textEmailAddress"
                android:padding="8dp" />
            <EditText
                android:id="@+id/Prof_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_call_24"
                android:hint="PhoneNumber"
                android:inputType="number"
                android:textSize="20dp"
                android:padding="8dp" />
            <Button
                android:id="@+id/Update_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:textSize="18sp"
                app:cornerRadius="30dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
